developer=http://webtrees.net/
url=${developer}
maintainer=http://indiecomputing.com/
pkgname=$(basename $(pwd))
_major=1.7
pkgver=${_major}.12
pkgrel=1
pkgdesc="Web based family history software"
arch=('any')
license=("GPL3")
source=("https://github.com/fisharebest/webtrees/releases/download/${pkgver}/webtrees-${pkgver}.zip")
releasepage=('https://github.com/fisharebest/webtrees/releases')
options=('!strip')
sha512sums=('05519c91172e6a0a02164bea8d9838a6cfdc17e6fe5633f6f401e3b0dedc595b283cd29e9ace8b80871a57f4fad29f807417186eae921fcba54aa39e4ad2dafd')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Icons
    install -D -m0644 ${startdir}/appicons/{72x72,144x144}.png -t ${pkgdir}/ubos/http/_appicons/${pkgname}/

# Data
    mkdir -p ${pkgdir}/ubos/lib/${pkgname}

# Code
    install -D -m0755 ${startdir}/bin/populate-db.pl -t ${pkgdir}/ubos/share/${pkgname}/bin/

# SQL
    install -D -m644 ${startdir}/sql/tables.sql -t ${pkgdir}/ubos/share/${pkgname}/sql/

# Templates
    install -D -m644 ${startdir}/tmpl/{config.ini.php,htaccess}.tmpl -t ${pkgdir}/ubos/share/${pkgname}/tmpl/

# The app
    cp -dr --no-preserve=ownership ${startdir}/src/webtrees ${pkgdir}/ubos/share/${pkgname}/
}
